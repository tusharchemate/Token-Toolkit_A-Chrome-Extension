{
  "manifest_version": 3,
  "name": "Token Toolkit",
  "description": "Capture authorization tokens and provide general request info.",
  "version": "1.1",
  "permissions": ["webRequest", "clipboardWrite", "activeTab"],
  "host_permissions": ["https://*/**", "http://*/**"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
